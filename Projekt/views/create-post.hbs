<div class="about-section">
  <h1>Create a Post</h1>
  <p>Create your post by filling in the fields below.</p>
</div>

{{#if errorMessages.length}}
	<p class="error">Couldn't create the post because:</p>
	<ul>
		{{#each errorMessages}}
			<li class="error">{{this}}</li>
		{{/each}}
	</ul>
{{/if}}

<div class="wrap">
  <form class="other-form" action="/posts/create/{{page}}" method="POST">
    <div class="form-header">
      <h3>Create Post</h3>
    </div>
    <div class="form-group">
      <input class="form-input" type="text" name="title"  value="{{posttitle}}" placeholder="Enter Your Title Here!">
    </div>
    <div class="form-group">
      <input class="form-input" type="text" name="message" value="{{postmessage}}" placeholder="Enter Your Message Here!">
    </div>
    <div class="form-group">
      <input class="form-button"type="submit" value="Create">
    </div>
  </form>
</div>
