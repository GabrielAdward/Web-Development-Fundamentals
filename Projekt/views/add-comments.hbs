<div class="about-section">
  <h1>Add A Comment</h1>
  <p>Create a comment by filling in the field below.</p>
</div>










{{#if errorMessages.length}}
	<p>Couldn't create the comment because:</p>
	<ul>
		{{#each errorMessages}}
			<li>{{this}}</li>
		{{/each}}
	</ul>
{{/if}}




<div class="wrap">
<form class="login-form" action="/posts/add-comments/{{post.id}}/{{page}}" method="POST">
<div class="form-header">
      <h3>Add Comment</h3>
    </div>
            <div class="form-group">

            <input class="form-input" type="text" name="comment" value="{{newComment}}">
    </div>
            <div class="form-group">

    <input class="form-button" type="submit" value="Comment">
            </div>
</form>
</div>

