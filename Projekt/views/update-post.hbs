<div class="about-section">
  <h1>Update Post</h1>
  <p>Update a post by filling in the fields below.</p>
</div>

{{#if errorMessages.length}}
	<p>Couldn't create the post because:</p>
	<ul>
		{{#each errorMessages}}
			<li>{{this}}</li>
		{{/each}}
	</ul>
{{/if}}

<div class="wrap">
	<form class="other-form" action="/posts/update/{{post.id}}" method="POST">
		<div class="form-header">
      <h3>Update Post</h3>
    </div>
		<div class="form-group">
			<input class="form-input" type="text" name="title" value="{{post.title}}">
		</div>
		<div class="form-group">
			<input class="form-input" type="text" name="message" value="{{post.message}}">
		</div>
		<div class="form-group">
			<input class="form-button" type="submit" value="Update">
		</div>
	</form>
</div>



