<div class="about-section">
  <h1>Create a Question</h1>
  <p>Create your question by filling in the fields below.</p>
</div>

{{#if errorMessages.length}}
	<p class="error">Couldn't create the post because:</p>
	<ul>
		{{#each errorMessages}}
			<li class="error">{{this}}</li>
		{{/each}}
	</ul>
{{/if}}

<div class="wrap">
  <form class="other-form" action="/questions/create-question/{{page}}" method="POST">
    <div class="form-header">
      <h3>Create Question</h3>
    </div>
    <div class="form-group">
			<input class="form-input" type="text" name="name"  value="{{qName}}" placeholder="Enter Your Name Here!">    
		</div>
    <div class="form-group">
			<input class="form-input" pattern="[a-zA-Z0-9!#$%&amp;'*+\/=?^_`{|}~.-]+@[a-zA-Z0-9-]+(\.[a-zA-Z0-9-]+)*" type="email" name="email"  placeholder="Enter Your Email Here!" value="{{qemail}}">   
 		</div>
    <div class="form-group">
			<input class="form-input" type="number" name="websiteGRADE"  value="{{qgrade}}" placeholder="Enter Your Grade Here!">
 		</div>
     <div class="form-group">
				<input class="form-input" type="text" name="questionTITLE" value="{{qtitle}}" placeholder="Enter Your Title Here!"> </div>
    <div class="form-group">
      <input class="form-button"type="submit" value="Create">
    </div>
  </form>
</div>
